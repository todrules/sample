main-container('color'="primary" 'title'="Themes")
    div(row center-start align-start)
        ng-container('*ngFor'="let theme of myThemes; index as i")
            div(style="background-color: #fff; padding: 6px; border-radius: 4px; margin: 10px; cursor: pointer;" '(click)'="setActiveTheme(theme.name)")
                div {{theme.name}}
                div(row content-start align-start nowrap)
                    div.theme-color('[ngStyle]'="{'background-color': theme?.colors?.primary || themeDefaults.primary}")
                    div.theme-color('[ngStyle]'="{'background-color': theme?.colors?.accent || themeDefaults.accent}")
                    div.theme-color('[ngStyle]'="{'background-color': theme?.colors?.secondary || themeDefaults.secondary}")
                    div.theme-color('[ngStyle]'="{'background-color': theme?.colors?.warn || themeDefaults.warn}")
                    div.theme-color('[ngStyle]'="{'background-color': theme?.colors?.danger || themeDefaults.danger}")
                    div.theme-color('[ngStyle]'="{'background-color': theme?.colors?.info || themeDefaults.info}")
                    div.theme-color('[ngStyle]'="{'background-color': theme?.colors?.success || themeDefaults.success}")
                    div.theme-color('[ngStyle]'="{'background-color': theme?.colors?.dark || themeDefaults.dark}")
                    div.theme-color('[ngStyle]'="{'background-color': theme?.colors?.light || themeDefaults.light}")